{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebse.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "server"
      },
      {
        "source": "**",
        "function": "mailers"
      },
      {
        "source": "**",
        "function": "sendWelcomeEmail"
      }
    ]
  }
}
